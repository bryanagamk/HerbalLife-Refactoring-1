<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".penyakit.search.view.activity.PenyakitSearchActivity">

    <data>
        <variable
            name="view"
            type="com.herballife.main.penyakit.search.contract.PenyakitSearchContract.View" />

        <variable
            name="penyakitSearchViewModel"
            type="com.herballife.main.penyakit.search.viewmodel.PenyakitSearchViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#848184"
            android:text="@{penyakitSearchViewModel.selection}"
            android:textSize="12pt"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:background="#ffffff"
            android:completionThreshold="3"
            android:onTextChanged="@{penyakitSearchViewModel::changeSelection}"
            app:items="@{penyakitSearchViewModel.penyakits}" />

    </LinearLayout>

</layout>