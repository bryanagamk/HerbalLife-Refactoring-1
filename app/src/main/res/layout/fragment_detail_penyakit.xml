<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".penyakit.detail.view.activity.DetailPenyakitActivity">

    <data>
        <variable
            name="view"
            type="com.herballife.main.penyakit.detail.contract.DetailPenyakitContract.View" />

        <variable
            name="detailPenyakitViewModel"
            type="com.herballife.main.penyakit.detail.viewmodel.DetailPenyakitViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/daftar_penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="@{detailPenyakitViewModel.name}"
            android:textColor="#ffffffff"
            android:textSize="25dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="@{detailPenyakitViewModel.herbalMedicine}"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/tutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="@{detailPenyakitViewModel.tutorial}"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="italic" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/button1"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#27eb2b"
            android:onClick="@{detailPenyakitViewModel::moveToCatalogActivity}"
            android:text="Go to Catalog"
            android:textColor="#000000"
            android:textStyle="bold" />

    </LinearLayout>

</layout>