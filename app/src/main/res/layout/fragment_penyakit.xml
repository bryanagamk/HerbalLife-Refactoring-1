<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".penyakit.view.activity.PenyakitActivity">

    <data>
        <variable
            name="view"
            type="com.herballife.main.penyakit.contract.PenyakitContract.View" />

        <variable
            name="penyakitViewModel"
            type="com.herballife.main.penyakit.viewmodel.PenyakitViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:text="List Penyakit :"
            android:textColor="#ffffffff"
            android:textSize="25dp" />

        <ListView
            android:id="@+id/listpenyakit"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="top"
            app:items="@{penyakitViewModel.penyakits}"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/tombol_cari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:onClick="@{() -> penyakitViewModel.moveToSearchActivity()}"
            android:text="Search" />

    </LinearLayout>

</layout>